{
  "name": "Refern Screenshotter",
  "description": "Capture screenshots and upload to refern automatically",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "save": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Save a link"
    },
    "random": {
      "suggested_key": {
        "default": "Alt+Shift+L"
      },
      "description": "Load a random link"
    }
  }
}
